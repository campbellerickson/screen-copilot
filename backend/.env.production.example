# Production Environment Configuration
# Copy this to .env in production and fill in actual values

# Database Configuration
# Get this from Railway PostgreSQL dashboard → Variables → DATABASE_URL
DATABASE_URL="postgresql://postgres:RAILWAY_PASSWORD@containers-us-west-xxx.railway.app:xxxx/railway"

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Configuration
# For mobile apps, you can use * or specify your domains
CORS_ORIGIN=*

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=error

# JWT (generate a strong secret for production)
JWT_SECRET=generate-a-strong-random-secret-here
