# Database Configuration
# Development: Local PostgreSQL
# Production: Railway.app PostgreSQL (copy from Railway dashboard)
DATABASE_URL="postgresql://postgres:password@localhost:5432/screen_budget_dev?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Development: Allow localhost and local network IP for iOS testing
# Production: Set to your frontend domain or * for mobile apps
CORS_ORIGIN=*

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=info

# JWT (for future authentication implementation)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
