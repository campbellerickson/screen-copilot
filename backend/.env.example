# Database Configuration
# Development: Local PostgreSQL
# Production: Railway.app PostgreSQL (copy from Railway dashboard)
DATABASE_URL="postgresql://postgres:password@localhost:5432/screen_budget_dev?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Development: Allow localhost and local network IP for iOS testing
# Production: Set to your frontend domain or * for mobile apps
CORS_ORIGIN=*

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=info

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Apple Sign In
APPLE_BUNDLE_ID=com.campbell.ScreenTimeBudget

# Stripe Configuration (for web subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Frontend URL (for Stripe redirects)
FRONTEND_URL=http://localhost:3000
