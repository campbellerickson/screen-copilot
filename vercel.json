{
  "version": 2,
  "buildCommand": "cd backend && npm install && npx prisma generate && npm run build",
  "outputDirectory": "backend/dist",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "ignore": [
    "ios/**",
    "*.md",
    "!README.md",
    "backend/tests/**",
    "backend/src/tests/**"
  ]
}
